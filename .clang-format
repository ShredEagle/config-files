Language: Cpp
UseTab: Never
IndentWidth: 4
BreakBeforeBraces: Mozilla
ColumnLimit: 80
AllowShortIfStatementsOnASingleLine: AllIfsAndElse
AlwaysBreakAfterReturnType: None
AlwaysBreakTemplateDeclarations: Yes
AccessModifierOffset: -4
BinPackParameters: false
BreakBeforeBinaryOperators: NonAssignment
BreakBeforeTernaryOperators: true
BreakConstructorInitializers: AfterColon
CompactNamespaces: false
Cpp11BracedListStyle: true
FixNamespaceComments: true
IncludeBlocks: Regroup
IncludeCategories:
  - Regex: '^"[^\.]+\.h"' # same components
    Priority: 2
  - Regex: '^"\.+.*\.h"'
    Priority: 3 # other relative components
  - Regex: '<[[:alnum].]+\.h>'
    Priority: 4 # other absolute path components
  - Regex: '<[[:alnum].]+>'
    Priority: 5 # system import
IndentAccessModifiers: false
IndentCaseBlocks: false
IndentPPDirectives: None
KeepEmptyLinesAtTheStartOfBlocks: false
NamespaceIndentation: None
PackConstructorInitializers: NextLine # needs clang-format 14
PointerAlignment: Middle
ReferenceAlignment: Middle
SortIncludes: CaseInsensitive
SpaceAfterTemplateKeyword: true
SpaceAfterCStyleCast: true
SpaceBeforeAssignmentOperators: true
SpaceBeforeParens: ControlStatementsExceptControlMacros
SpacesInAngles: Never
SpacesInCStyleCastParentheses: false
SpacesInConditionalStatement: false
SpacesInContainerLiterals: false
SpacesInParentheses: false
SpacesInSquareBrackets: false
PenaltyBreakBeforeFirstCallParameter: 1
BreakBeforeBraces: Custom
FixNamespaceComments: true
Cpp11BracedListStyle: true
BraceWrapping:
    AfterCaseLabel: true
    AfterClass: true
    AfterControlStatement: Always
    AfterEnum: true
    AfterFunction: true
    AfterNamespace: false
    AfterStruct: true
    AfterUnion: true
    AfterExternBlock: true
    BeforeCatch: true
    BeforeElse: true
    BeforeWhile: true
    SplitEmptyFunction: false
    SplitEmptyRecord: false
    SplitEmptyNamespace: false
    IndentBraces: false

# InsertBraces: true # needs clang-format 15
# InsertTrailingCommas: true
